.sidebar-header {
  position: relative;
}

.sidebar-header-container {
  cursor: pointer;
  margin: -15px -15px -4px -15px;
  padding: 15px 15px 8px 15px;
}

.sidebar-header-workspace-name {
  font-weight: 600;
  color: white;
  font-size: 1.1rem;
}

.sidebar-header-container:hover {
  color: white;
  background: #259;
}

.sidebar-header-dropdown {
  position: absolute;
  z-index: 100;
  background-color: white;
  color: #333;
  padding: 0 22px;
  left: -5px;
  min-width: 220px;
  transition: all 0.3s;
}

.sidebar-header-dropdown-section-header {
  font-weight: 600;
  font-size: 1.1rem;
  margin: 20px 0;
  display: flex;
  align-items: center;
}

.modal-panel-overlay {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: black;
  opacity: 0.4;
}

.sidebar-header-dropdown-section-header img {
  height: 30px;
  width: 30px;
  margin-right: 10px;
}


.modal-panel{
  height: 400px;
  width: 600px;
  color: #333;
}